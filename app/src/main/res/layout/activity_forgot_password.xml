<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="top|center_horizontal">


    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_lankalens_logo"
        />

    <TextView
        android:id="@+id/tvAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="LankaLens"
        android:textColor="@color/lanka_green"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Name -->
    <TextView
        android:id="@+id/tvCreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Forget Password"
        android:textColor="@color/lanka_green_dark"

        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Enter your Email, we will send you a verification code."
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:hint="Your Email"
        android:inputType="textEmailAddress"
        android:paddingStart="16dp"
        android:background="@drawable/bg_input" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSendCode"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:text="Send Code"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:background="@drawable/btn_gradient"
        app:backgroundTint="@null"
        app:cornerRadius="24dp" />


</LinearLayout>
